{

  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "CommonJS",
    "skipLibCheck": true,
    "target": "es2017",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
